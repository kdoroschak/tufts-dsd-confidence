#!/usr/bin/env python2.7

infilename = "biogrid_ppi_nom.pub"
outfilename = "biogrid_ppi_interactions_per_pub.count"

pubs = {}

with open(infilename, "r") as infile:
    for line in infile:
        cols = line.split('\t')
        pub = cols[2][:-1]

        if pub in pubs:
            pubs[pub] += 1
        else:
            pubs[pub] = 1

outfile = open(outfilename, 'w')

opubs = []

for pub in pubs:
    opub = (pubs[pub], pub)
    opubs.add(opub)

opubs.sort()

for pub in opubs:
    outfile.write(pub[1])
    outfile.write('\t')
    outfile.write(str(pub[0]))
    outfile.write('\n')

outfile.close()